<Window x:Class="Go.To.Sleep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Go.To.Sleep"
        mc:Ignorable="d"
        Title="Go To Sleep" MinHeight="600" MinWidth="400" Width="420" Icon="stopwatch_Enb_icon.ico">
    <Grid MinWidth="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Annotaitons -->
        <ItemsControl 
            ItemsSource="{Binding Annotations}">
            
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas Background="AntiqueWhite" Width="400"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter
                        Property="Canvas.Left"
                        Value="153"
                        />
                    <Setter
                        Property="Canvas.Top"
                        Value="70"
                        />
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid                         
                        Width="{Binding Width}"
                        Height="{Binding Height}" 
                        >
                        <Grid.RenderTransform>
                            <RotateTransform CenterX="{Binding CenterX}" CenterY="{Binding CenterY}" Angle="{Binding Angle, FallbackValue=0}"/>
                        </Grid.RenderTransform>
                        <Path 
                            Stroke="Red" 
                            StrokeThickness=".5"
                            Fill="blue"
                            >
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure>
                                        <LineSegment Point="{Binding Points[0]}" />
                                        <LineSegment Point="{Binding Points[1]}" />
                                        <ArcSegment 
                                            SweepDirection="Clockwise" 
                                            Size="{Binding Sizes[0]}"
                                            Point="{Binding Points[2]}" />
                                        <LineSegment Point="{Binding Points[3]}" />
                                        <ArcSegment 
                                            SweepDirection="Counterclockwise" 
                                            Size="{Binding Sizes[1]}"
                                            Point="{Binding Points[4]}" />
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Text}"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="."/>
                    </Grid>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
